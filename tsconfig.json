{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "es6",
		"target": "es6",
		"jsx": "react",
		"experimentalDecorators": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,

		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "node"
        ]
	},
	"exclude": [
		"node_modules",
		"build",
		"misc",
        "vendor",
        "**/*test*"
	]
}
